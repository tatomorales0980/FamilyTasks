<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".InviteOthers">


    <ImageView
        android:id="@+id/ivBackInvitation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:paddingLeft="8dp"
        android:src="@drawable/ic_arrowback"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lltop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat"
        android:paddingLeft="8dp"
        android:text="Invite Other"
        android:textColor="@color/white"
        android:textSize="32sp">
    </TextView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvTitle"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:textColor="@color/white"
            android:text="Message">
        </TextView>

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMessage"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="32dp"
            android:background="@color/white"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical">
        </EditText>


         <TextView
             android:id="@+id/tvGroupName"
             android:layout_below="@id/etMessage"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:gravity="center_horizontal"
             android:textSize="18dp"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:layout_marginLeft="32dp"
             android:layout_marginRight="32dp"
             android:text="YourGroupName">
         </TextView>
            <Button
                android:id="@+id/btnInvite"
                android:layout_below="@id/tvGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/todo_button"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:text="Send Invitation">
            </Button>

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_below="@+id/btnInvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="8dp"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:text="People on my Group">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle2">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listUsers"
                android:layout_below="@+id/tvTitle"
                android:layout_margin="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>