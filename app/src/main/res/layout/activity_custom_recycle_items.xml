<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".CustomRecycleContacts">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llmain"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivItem"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/orange_fruit">
            </ImageView>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="4dp"
                android:text="Item name"
                android:textSize="16dp"
                android:textColor="@color/colorPurpleButton"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="4dp"
                android:layout_below="@+id/tvContactName"
                android:text="Item Description"
                android:textColor="@color/colorPurple"
                android:textSize="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/btnItemAdd"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorPurpleButton"
                    android:padding="11dp"
                    android:tint="@color/colorWhite"
                    android:src="@drawable/ic_round_add" />
                <ImageButton
                    android:id="@+id/btnItemEdit"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorPurpleButton"
                    android:padding="11dp"
                    android:tint="@color/colorWhite"
                    android:src="@drawable/ic_round_edit" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>