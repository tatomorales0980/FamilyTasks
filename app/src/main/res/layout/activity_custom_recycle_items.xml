<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginBottom="8dp"
    tools:context=".CustomRecycleContacts">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="315dp"
        android:orientation="vertical"
        android:id="@+id/cvMain"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/orange_fruit">
        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:paddingLeft="4dp"
                android:text="Item name"
                android:textSize="18dp"
                android:textColor="@color/colorPurpleButton"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:paddingLeft="4dp"
                android:layout_below="@+id/tvContactName"
                android:text="Item Description"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorPurple"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/btnItemAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:padding="11dp"
                    android:tint="@color/colorPurpleButton"
                    android:src="@drawable/ic_round_add" />
                <ImageButton
                    android:id="@+id/btnItemEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:padding="11dp"
                    android:tint="@color/colorPurpleButton"
                    android:src="@drawable/ic_round_edit" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add to your list"
                android:textColor="@color/colorPurpleButton"
                android:textSize="11dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Item"
                android:textColor="@color/colorPurpleButton"
                android:textSize="11dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>