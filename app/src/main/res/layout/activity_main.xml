    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/montserrat"-->
<!--                android:gravity="center"-->
<!--                android:paddingTop="20dp"-->
<!--                android:text="My Plans and Necessities"-->
<!--                android:textColor="@color/colorPurpleComplement1"-->
<!--                android:textSize="24sp"-->
<!--                android:textStyle="bold">-->
<!--            </TextView>-->

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/title_main2">

            </ImageView>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                app:lottie_autoPlay="true"
                app:lottie_fileName="working_together.json"
                app:lottie_loop="true" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_borders_solid"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/email"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="@string/enterEmail"
                android:textColorHint="@color/colorHint"
                android:inputType="textWebEmailAddress"
                android:paddingLeft="15dip"
                android:textColorLink="#FFFFFF" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_borders_solid"
                android:backgroundTint="@color/colorWhite"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/password"
                android:textColorHint="@color/colorHint"
                android:inputType="textPassword"
                android:paddingLeft="15dip" />

            <EditText
                android:id="@+id/etGroup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/group"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Group Name"
                android:inputType="textWebEmailAddress"
                android:paddingLeft="15dip"
                android:textColorLink="#FFFFFF" />

            <Button
                android:id="@+id/btnSingUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/todo_button"
                android:fontFamily="@font/montserrat"
                android:text="@string/btmsingup"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Or"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:id="@+id/rvSigninGoogle"
                android:layout_width="match_parent"
                android:layout_marginStart="32dp"
                android:background="@drawable/todo_button"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_height="50dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/google_icon" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_toRightOf="@id/imageView3"
                        android:layout_width="wrap_content"
                        android:text="@string/singGoogle"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite"  />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="32dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorPurpleBackground2"
                    android:text="@string/newUser">
                </TextView>
                <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:text="@string/register">

                </TextView>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

