    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CustomRecycleTodo"></activity>
        <activity android:name=".RecycleView_todo" />
        <activity android:name=".CustomRecycleItems" />
        <activity android:name=".CustomRecycleContacts" />
        <activity android:name=".RecycleView" />
        <activity android:name=".Items" />
        <activity android:name=".GoogleRegister" />
        <activity
            android:name=".register"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".LottieAnim" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>